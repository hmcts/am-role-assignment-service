package validationrules.test;
import uk.gov.hmcts.reform.roleassignment.domain.model.RoleAssignment;
import uk.gov.hmcts.reform.roleassignment.domain.model.ExistingRoleAssignment;
import uk.gov.hmcts.reform.roleassignment.domain.model.Case;
import uk.gov.hmcts.reform.roleassignment.domain.model.Request;
import uk.gov.hmcts.reform.roleassignment.domain.model.RoleConfig;
import uk.gov.hmcts.reform.roleassignment.domain.model.RoleConfigPattern;
global org.slf4j.Logger logger

rule "request"
salience 1000
when
	$r: Request()
then
	logger.info("We have request " + $r);
end;

rule "role_assignment"
salience 1000
when
	$ra: RoleAssignment()
then
	logger.info("We have role assignment " + $ra.getStatus() + " : " + $ra);
end;

rule "existing_role_assignment"
salience 1000
when
	$ra: ExistingRoleAssignment()
then
	logger.info("We have existing role assignment " + $ra);
end;

rule "show_case"
salience 1000
when
	$c: Case()
then
	logger.info("We have case " + $c.getId() + " : " + $c);
end;

rule "config"
salience 1000
when
	$c: RoleConfig()
then
	logger.info("We have role config");
end;


rule "config_pattern"
salience 1000
when
	$p: RoleConfigPattern()
then
	logger.info("We have a pattern for " + $p.getRoleName() + " : " + $p);
end;


