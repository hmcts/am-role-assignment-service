  "_extends_": "F-001_Test_Data_Base",
  "specs": [
    "contains multiple Role Assignments where one of the role has invalid data"
  ],
  "request": {
    "body": {
      "requestedRoles": [
        {
          "_extends_": "CommonRequestedRole"
        },
        {
          "_extends_": "CommonRequestedRole",
          "roleType": "ORGANISATION",
          "grantType": "SPECIFIC"
        }
      ]
    }
  },
  "expectedResponse": {
