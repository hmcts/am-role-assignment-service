  "_extends_": "F-001_Test_Data_Base",
  "specs": [
    "contains a single Role Assignment",
    "contains data which is not as per rule validations"
  ],


  "request": {
    "body": {
      "requestedRoles": [
        {
          "_extends_": "CommonRequestedRole",
          "roleType": "CASE",
          "grantType": "STANDARD"
        }
      ]
    }
  },

  "expectedResponse": {
    "_extends_": "Common_201_Response",
    "headers": {
